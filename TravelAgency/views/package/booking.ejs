<% layout('layouts/boilerplate') %>

    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="mb-3">
                <label class="form-label" for="name">NANE ON CARD</label>
                <input class="form-control" type="text" id="name" name="name" placeholder="NAME" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
                <div class="invalid-feedback">
                    Please provide your full name on your card.
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="cardNumber">CARD NUMBER</label>
                <input class="form-control" type="text" id="cardNumber" name="cardNumber" placeholder="0000 0000 0000 0000" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
                <div class="invalid-feedback">
                    Please provide a card number
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="expiryDate">EXPIRY DATE</label>
                <div class="input-group mb-3">
                    <input type="text" class="form-control" id="expiryDate" placeholder="MM/YY" name="expiryDate" aria-label="price" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please provide a expiry date.
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="cvv">CVC/CVV</label>
                <div class="input-group mb-3">
                    <input type="text" class="form-control" id="cvv" placeholder="3 or 4 digit number" name="cvv" aria-label="cvv" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please provide a CVC or CVV number.
                    </div>
                </div>
            </div>
            <a class="card-link btn btn-info" href="/thankyou">Confirm Booking</a>
        </div>
    </div>