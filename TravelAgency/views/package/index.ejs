<% layout('layouts/boilerplate') %>

    <div id="cluster-map"></div>

    <h1>Packages</h1>

    <% for(let pkg of package){ %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <%if(pkg.images.length) {%>
                        <img class="img-fluid" alt="" src="<%=pkg.images[0].url%>">
                        <% } %>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%=pkg.title%>
                        </h5>
                        <p class="card-text">
                            <%=pkg.description%>
                        </p>
                        <p class="card-text">
                            <small class="text-muted"><%=pkg.location%></small>
                        </p>
                        <a class="btn btn-primary" href="/package/<%=pkg._id%>">View Detail</a>
                    </div>

                </div>
            </div>

        </div>
        <% } %>


            <script>
                const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
                const package = {
                    features: <%- JSON.stringify(package) %>
                }
            </script>

            <script src="/javascripts/clusterMap.js"></script>